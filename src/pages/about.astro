    font-size: clamp(1.25rem, 3vw, 1.75rem);
    font-weight: 400;
    color: var(--gray-300);
    display: block;
    margin-top: 0.5rem;
  }

  .highlight-word {
    position: relative;
    z-index: 1;
  }

  .highlight-word::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 30%;
    background: var(--accent-light);
    opacity: 0.3;
    z-index: -1;
    border-radius: 4px;
  }

  /* GRID MEJORADO CON ANIMACIONES */
.process-grid {
  display: grid;
  gap: 1.5rem;
  margin-top: 2rem;
}

/* Mobile: 1 columna */
@media (max-width: 767px) {
  .process-grid {
    grid-template-columns: 1fr;
  }
}

/* Tablet: 2 columnas */
@media (min-width: 768px) and (max-width: 1199px) {
  .process-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

/* Desktop: 3 columnas con m√°s espacio */
@media (min-width: 1200px) {
  .process-grid {
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }
  
  /* Destacar la tarjeta central en desktop */
  .process-card:nth-child(2n) {
    transform: scale(1.02);
    box-shadow: 0 10px 30px rgba(var(--accent-rgb), 0.15);
  }
}

/* ANIMACIONES Y EFECTOS MEJORADOS */
.process-card {
  background: linear-gradient(145deg, var(--gray-800), var(--gray-850));
  border-radius: 16px;
  padding: 2rem;
  border-left: 5px solid var(--accent-regular);
  transition: all 0.4s cubic-bezier(0.22, 1, 0.36, 1);
  box-shadow: var(--shadow-md);
  position: relative;
  overflow: hidden;
  z-index: 1;
}

.process-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(var(--accent-rgb), 0.03), transparent);
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: -1;
}

.process-card:hover {
  transform: translateY(-8px) scale(1.02);
  box-shadow: 0 15px 35px rgba(var(--accent-rgb), 0.2);
  border-left-color: var(--accent-light);
}

.process-card:hover::before {
  opacity: 1;
}

/* Efecto de "luz" al hacer hover */
.process-card::after {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(
    circle at center,
    rgba(var(--accent-rgb), 0.1) 0%,
    transparent 70%
  );
  transform: scale(0);
  opacity: 0;
  transition: transform 0.6s cubic-bezier(0.22, 1, 0.36, 1), opacity 0.4s ease;
  z-index: -1;
}

.process-card:hover::after {
  transform: scale(1);
  opacity: 1;
}

/* Resaltar el n√∫mero al hacer hover */
.process-card:hover .process-number-wrapper {
  transform: rotate(15deg) scale(1.1);
  background: var(--accent-regular);
}

.process-card:hover .process-number {
  color: white;
}

.process-number-wrapper {
  transition: all 0.4s cubic-bezier(0.22, 1, 0.36, 1);
}
  

