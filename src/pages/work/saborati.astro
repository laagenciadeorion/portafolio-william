  <ContactCTA />

  <style is:global>
    /* Estilos base */
    body {
      font-family: var(--font-body);
      color: var(--gray-200);
      line-height: 1.6;
      margin: 0;
      background-color: var(--gray-999);
    }

    .hero {
      position: relative;
    }

    .tech-grid-section {
      padding: 4rem 2rem;
      background: var(--gray-900);
    }

    .tech-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      gap: 2rem;
      max-width: 900px;
      margin: 0 auto;
    }

    .tech-card {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
      transition: all 0.3s ease;
    }

   .tech-icon {
  width: 80px;
  height: 80px;
  background: var(--gray-600); /* Fondo que contrasta con ambos temas */
  border-radius: 20%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: var(--shadow-sm);
  transition: all var(--theme-transition);
}
.rounded-image {
  border-radius: 20px; /* Ajusta este valor para m√°s/menos redondeo */
  width: 100%; /* Ocupa todo el ancho disponible */
  height: auto; /* Mantiene la proporci√≥n original */
  display: block; /* Elimina espacios no deseados debajo de la imagen */
  max-width: 1000px; /* Opcional: limita el ancho m√°ximo si es muy grande */
  margin: 0 auto; /* Centra la imagen horizontalmente */
  box-shadow: var(--shadow-md); /* Sombra opcional para mejor efecto */
}
    .tech-svg {
      width: 50px;
      height: 50px;
      object-fit: contain;
      transition: all 0.3s ease;
    }

    .tech-name {
      font-weight: 500;
      color: var(--accent-regular);
      text-align: center;
    }

    .tech-card:hover .tech-icon {
      transform: scale(1.1);
      box-shadow: var(--shadow-md);
    }

    .tech-card:hover .tech-svg {
      transform: scale(1.15);
    }

    .highlights {
      padding: 4rem 2rem;
      background: var(--gray-900);
    }

     .highlight-cards-container {
        display: flex;
        flex-direction: column;
        gap: 3rem;
        max-width: 1200px;
        margin: 0 auto;
    }
     
    .highlight-section-title {
        color: var(--accent-light);
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
        text-align: center;
        position: relative;
        padding-bottom: 10px;
    }

    .highlight-section-title:after {
        content: '';
        display: block;
        width: 60px;
        height: 3px;
        background: var(--accent-regular);
        margin: 0.5rem auto 0;
    }
@media (max-width: 768px) {
        .highlight-section {
            padding: 1.5rem;
        }
        
        .highlight-card {
            width: 100%;
            max-width: 350px;
        }
    }
    .section-title {
      text-align: center;
      font-size: var(--text-3xl);
      margin-bottom: 3rem;
      color: var(--accent-regular);
      position: relative;
      font-family: var(--font-brand);
    }

    .section-title:after {
      content: '';
      display: block;
      width: 80px;
      height: 4px;
      background: var(--accent-light);
      margin: 1rem auto 0;
    }

    .highlight-cards {
      display: flex;
      justify-content: center;
      gap: 2rem;
      flex-wrap: wrap;
      max-width: 1200px;
      margin: 0 auto;
    }

    .highlight-card {
      background: var(--gray-999);
      border-radius: 1rem;
      padding: 2rem;
      width: 280px;
      box-shadow: var(--shadow-sm);
      transition: all 0.3s ease;
      text-align: center;
    }

    .highlight-card:hover {
      transform: translateY(-10px);
      box-shadow: var(--shadow-md);
    }

    .highlight-icon {
      font-size: 2.5rem;
      margin-bottom: 1.5rem;
      display: inline-block;
      transition: all 0.3s ease;
    }

    .highlight-card:hover .highlight-icon {
      transform: scale(1.2);
    }

    /* Responsive */
    @media (max-width: 1024px) {
      .hero-image-container {
        width: 85%;
        height: 55vh;
      }
    }

    @media (max-width: 768px) {
      .tech-grid {
        grid-template-columns: repeat(3, 1fr);
        gap: 1.5rem;
      }
      
      .tech-icon {
        width: 70px;
        height: 70px;
      }
      
      .tech-svg {
        width: 40px;
        height: 40px;
      }
      
      .highlight-cards {
        flex-direction: column;
        align-items: center;
      }
      
      .highlight-card {
        width: 100%;
        max-width: 350px;
      }
    }

    @media (max-width: 480px) {
      .hero {
        min-height: auto;
      }
      
      .tech-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }
  </style>
</BaseLayout>