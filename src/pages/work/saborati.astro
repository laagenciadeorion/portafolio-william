      <div class="tech-card">
        <div class="tech-icon">
          <img 
            src={`/assets/${tech.filename}`} 
            alt={tech.name}
            loading="lazy"
            class="tech-svg"
          />
        </div>
        <span class="tech-name">{tech.name}</span>
      </div>
    ))}
  </div>
</section>

