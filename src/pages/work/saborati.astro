---
import ContactCTA from '../../components/ContactCTA.astro';
import Hero from '../../components/Hero.astro';
import BaseLayout from '../../layouts/BaseLayout.astro';

const technologies = [
  { name: 'WordPress', filename: 'wordpress.svg',filter: 'invert(0%)' },
  { name: 'Elementor', filename: 'elementor.svg' },
  { name: 'MongoDB', filename: 'mongodb.svg' },
  { name: 'Node.js', filename: 'nodedotjs.svg' },
  { name: 'Shopify', filename: 'shopify.svg' }
];
---

<BaseLayout title="Saborati | Portafolio">
  <section class="hero">
    <div class="stack gap-20">
      <main class="wrapper about">
        <Hero
          title="Saborati"
          tagline="Dulceria Mexicana"
        >
          <img
            width="1553"
            height="973"
            src="/assets/saborati.jpg"
            alt="Super Vida"
            class="rounded-image" 
          />
        </Hero>
      </main>
    </div>
  </section>
<div class="visit-site" style="text-align: center; margin: 3rem 0;">
  <a 
    href="https://tienda.saborati.com.mx/" 
    target="_blank"
    rel="noopener noreferrer"
    class="visit-button"
    style="
      display: inline-block;
      padding: 14px 28px;
      background: linear-gradient(135deg, #7e22ce 0%, #9333ea 100%); /* Degradado morado */
      color: white;
      border-radius: 10px;
      font-weight: 700;
      text-decoration: none;
      font-size: 1.1rem;
      letter-spacing: 0.5px;
      transition: all 0.3s ease;
      box-shadow: 0 4px 6px rgba(124, 58, 237, 0.3);
      border: 2px solid transparent;
    "
    onmouseover="
      this.style.transform='translateY(-3px)';
      this.style.boxShadow='0 6px 16px rgba(124, 58, 237, 0.4)';
      this.style.borderColor='#ffffff55';
    "
    onmouseout="
      this.style.transform='';
      this.style.boxShadow='0 4px 6px rgba(124, 58, 237, 0.3)';
      this.style.borderColor='transparent';
    "
  >
    Visitar Saborati
  </a>
</div>
